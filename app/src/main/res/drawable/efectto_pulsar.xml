<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/azul">
    <item android:id="@android:id/mask">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <solid
                android:color="@color/azulclaro"/>
            <size
                android:height="50px"
                android:width="50px"/>
            <stroke
                android:width="1dp"
                android:color="@color/blacoazul">

            </stroke>
            <padding
                android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp"/>

            <corners
                android:radius="2dp"/>
        </shape>
    </item>

    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:endColor="@color/azulclaro"
                android:startColor="@color/blacoazul"
                android:type="linear" />
            <stroke
                android:width="1dp"
                android:color="@color/blacoazul">

            </stroke>
            <padding
                android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp"/>

            <corners android:radius="2dp" />
        </shape>
    </item>
</ripple>